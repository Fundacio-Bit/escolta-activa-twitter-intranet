{{> menubar dictionaries_is_active=true}}

<!-- Sobreescribe algunos estilos por defecto -->
<style type="text/css">
  td.remove:hover { background: #ddd; }
  td.updateAlias:hover { background: #ddd; }
  td.updateStatus:hover { background: #ddd; }
  td a {
    display: block;
  }
</style>

<div class="container-fluid">

  <!-- ====== -->
  <!-- Título -->
  <!-- ====== -->
  <div class="row">
    <div class="col-md-12">
      <br><br>
      <h3>Diccionari de termes</h3>
    </div>
  </div>

  <!-- ========== -->
  <!-- Formulario -->
  <!-- ========== -->
  <div class="row well">
    <div class="col-md-10">
      <form id="searchForm" class="form-inline">
          <div id="form-group-brands" class="form-group">
          </div>
          <div class="form-group">
            <label>Categoria</label>
            <select name="category" class="form-control">
              <option value="--all--" selected>-- Totes --</option>
              <option value="esdeveniments">Esdeveniments</option>
              <option value="esports">Esports</option>
              <option value="naturalesa">Naturalesa</option>
              <option value="patrimoni">Patrimoni</option>
              <option value="platges">Platges</option>
              <option value="toponims">Top&ograve;nims</option>
            </select>
          </div>
          <button id="searchButton" class="btn btn-default">Cercar entrades</button>
          <button id="resetSearchButton" type="reset" class="btn btn-default">Netejar</button>
      </form>
    </div>
    <div class="col-md-2">
      <div class="btn-group">
        <button id="createButton" class="btn btn-primary">Crear entrada</button>
      </div>
    </div>
  </div>

  <!-- ============ -->
  <!-- Status panel -->
  <!-- ============ -->
  <div class="row">
    <div class="col-md-12">
      <div id="statusPanel">
      </div>
    </div>
  </div>

  <!-- ================================= -->
  <!-- Tabla de entradas del diccionario -->
  <!-- ================================= -->
  <div class="row">
    <div class="col-md-12">
      <div id="dictionaryTable">
      </div>
    </div>
  </div>

  <!-- ===================================== -->
  <!-- Modal: formulario creación de entrada -->
  <!-- ===================================== -->
  <div id="createNewEntryModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">
      <div class="modal-content" style="background-color: #f2f2f2;">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Crear Nova Entrada</h4>
        </div>
        <div class="modal-body">
          <div class="row">
            <div class="col-md-1"></div>
            <div class="col-md-10">
              <form id="basicDataNewEntryForm">
                <div id="form-group-brands-modal" class="form-group">
                </div>
                <div class="form-group">
                  <label>Categoria</label>
                  <div>
                    <select name="category" class="form-control">
                      <option value="" disabled selected hidden>-- Triar --</option>
                      <option value="esdeveniments">Esdeveniments</option>
                      <option value="esports">Esports</option>
                      <option value="naturalesa">Naturalesa</option>
                      <option value="patrimoni">Patrimoni</option>
                      <option value="platges">Platges</option>
                      <option value="toponims">Top&ograve;nims</option>
                    </select>
                  </div>
                  <div id="categoryError"></div>
                </div>
                <div class="form-group">
                  <label>Nom can&ograve;nic</label>
                  <div>
                    <input class="form-control" name="canonicalName" placeholder="Nom can&ograve;nic">
                  </div>
                  <div id="canonicalNameError"></div>
                </div>
                <div class="form-group">
                  <div>
                    <button id="generateCandidateAliasButton" class="btn btn-default">Generar &agrave;lies candidats</button>
                    <button id="resetBasicDataButton" type="reset" class="btn btn-default">Netejar</button>
                  </div>
                </div>
              </form>
            </div>
            <div class="col-md-1"></div>
          </div>
          <div class="row">
            <div class="col-md-1"></div>
            <div class="col-md-10" id="candidateAliasList"></div>
            <div class="col-md-1"></div>
          </div>
        </div>
        <div class="modal-footer">
          <div class="row">
            <div class="col-md-10" id="statusPanelModal">
            </div>
            <div class="col-md-2">
              <button type="button" class="btn btn-default" data-dismiss="modal">Tancar</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- ============================ -->
  <!-- Modal: modificación de alias -->
  <!-- ============================ -->
  <div id="updateAliasModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">
      <div class="modal-content" style="background-color: #f2f2f2;">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Modificar &agrave;lies</h4>
          <br>(Guia: En vermell s'indiquen els &agrave;lies descartats per contenir car&agrave;cters prohibits; i en blau, altres &agrave;lies canditats calculats a partir del nom can&ograve;nic)
        </div>
        <div class="modal-body">
          <div class="row">
            <div class="col-md-1"></div>
            <div class="col-md-10" id="updateAliasList"></div>
            <div class="col-md-1"></div>
          </div>
        </div>
        <div class="modal-footer">
          <div class="row">
            <div class="col-md-12">
              <button type="button" class="btn btn-default" data-dismiss="modal">Tancar</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>  <!-- fin container-fluid -->

{{> footer_scripts}}

<script type="text/javascript" src="/js/dictionary_terms.js"></script>
