<table class="table table-striped table-condensed">
{{#each brands}}
  <tr>
    <td>&nbsp;&nbsp;</td>
    <td>
      <br>
      <h4><b>{{title}}</b></h4>
    </td>
    <td style="vertical-align: middle"><h4>Categoria</h4></td>
    <td></td>
    <td style="vertical-align: middle"><h4>Subcategoria</h4></td>
    <td></td>
  </tr>

  {{#each influencers_list}}
  <tr>
    <td>&nbsp;&nbsp;</td>
    <td>
      <div class="checkbox">
        <label>
        {{#if selected}}
          <input type="checkbox" name="{{checkbox_name}}" value="{{value}}" checked="checked">&nbsp;{{{label}}}
        {{else}}
          <input type="checkbox" name="{{checkbox_name}}" value="{{value}}">&nbsp;{{{label}}}
        {{/if}}
        </label>
      </div>
    </td>
    <td style="padding: 10px;">
      <h5>{{category}}</h5>
    </td>
    <td>&nbsp;&nbsp;</td>
    <td style="padding: 10px;">
      <h5>{{subcategory}}</h5>
    </td>
  </tr>
  {{/each}}
  <tr>
    <td colspan="6">
      <br><p class="text-right"><a class="bottomLink" href="#">Anar al principi</a></p>
    </td>
  </tr>

{{/each}}

</table>
